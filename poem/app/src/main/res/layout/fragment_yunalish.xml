<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700"
    tools:context=".ui.yunalishFragment">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bir"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/ikki"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chose your location"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/bir"
        android:id="@+id/ikki">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:id="@+id/listpoem"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:backgroundTint="#F44336">
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Poems"
                android:gravity="center"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ikki"
        android:id="@+id/uch">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:id="@+id/listuser"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:backgroundTint="#9C27B0">
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Users"
                android:gravity="center"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>