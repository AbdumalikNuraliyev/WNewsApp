<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    app:cardElevation="30dp"
    android:elevation="50dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="#00BCD4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="15dp"
        android:id="@+id/pr"
        android:layout_height="match_parent"
        android:orientation="vertical">
<View
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@id/pr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/lay"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/teal_200"
            android:layout_width="100dp"
            app:cardCornerRadius="12dp"

            android:layout_height="30dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Health"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/pr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay"
        android:layout_marginTop="10dp"
        android:id="@+id/lay2"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Smoothie in the morning for 5 days "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:maxLines="1"
            android:id="@+id/desc"
            android:ellipsize="end"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/pr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calendar_today_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.04.2021"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:id="@+id/time"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mylayoutled"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EF1C0D"
        app:cardCornerRadius="50dp"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>