<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fons"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddPoemFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/teal_700"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/top1"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Add your Poems here"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/top2"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/top1"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/poemname"
        android:maxLines="1"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="Author"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/author"
        android:maxLines="1"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="Write here your poem please"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/Poems"
        android:maxLines="5"
        android:textColor="@color/black"/>


</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Add"
        android:id="@+id/addpoem"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>